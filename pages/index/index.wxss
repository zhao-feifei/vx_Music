/* 轮播图区域 */
.banners {
  width: 100%;
  height: 300rpx;
}

.banners image {
  width: 100%;
  height: 100%;
}

/* 导航区域 */
.navContainer{
  display: flex;
}

.navItem{
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  font-size: 50rpx;
  background: rgb(240, 19, 19);
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  border-radius: 50%;
  margin: 20rpx 0;
}

.navItem text{
  font-size: 26rpx;
}

/* 推荐歌曲 */
.recommendContainer{
  padding: 20rpx;
}



.recommendScroll{
  display: flex;
  height: 300rpx;
}

.scrollItem {
  width: 200rpx;
  margin-right: 20rpx;
}

.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}
.scrollItem text{
  font-size: 26rpx;
  /* 多行文本溢出，省略号代替 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 排行榜区域 */
.topList{
  padding: 20rpx;
}

/* 排行榜轮播图区域 */
.swiperItem{
  background: #fbfbfb;
  width: 97%;
}

.topListSwiper{
  height: 400rpx;
}

.musicItem{
  height: 100rpx;
  line-height: 100rpx;
  /* 当一个元素设置为flex盒模型后其子元素会自动转换为block */
  display: flex;
  margin-bottom: 20rpx;
}

.musicItem image{
  width: 100rpx;
  height: 100rpx;
}

.musicItem .order{
  width: 100rpx;
  text-align: center;
}